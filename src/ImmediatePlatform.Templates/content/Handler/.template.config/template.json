{
    "$schema": "https://json.schemastore.org/template",
    "author": "ImmediatePlatform",
    "classifications": [
        "ImmediatePlatform"
    ],
    "identity": "ImmediatePlatform.Handler",
    "name": "ImmediatePlatform Handler",
    "shortName": "iphandler",
    "description": "An item template for creating an ImmediatePlatform handler.",
    "tags" : {
        "language": "C#",
        "type": "item"
    },
    "sourceName": "ImmediateHandler",
    "forms": {
        "firstLowerCaseInvariant": {
            "identifier": "firstLowerCaseInvariant"
        }
    },
    "symbols": {
        "DefaultNamespace": {
            "type": "bind",
            "binding": "msbuild:RootNamespace",
            "replaces": "MyNamespace",
            "defaultValue": "MyNamespace"
        },
        "QueryClassName": {
            "type": "parameter",
            "description": "The name of the query class the handler will receive.",
            "datatype": "string",
            "replaces": "Query",
            "defaultValue": "Query"
        },
        "QueryClassNameCamelCase": {
            "type": "derived",
            "valueSource": "QueryClassName",
            "valueTransform": "firstLowerCaseInvariant",
            "replaces": "query"
        },
        "ResponseClassName": {
            "type": "parameter",
            "description": "The name of the response class the handler will return.",
            "datatype": "string",
            "replaces": "Response",
            "defaultValue": "Response"
        },
        "HttpMethod": {
            "type": "parameter",
            "description": "Adds the associated attribute to register the handler as an API endpoint.",
            "datatype": "choice",
            "replaces": "HttpMethod",
            "choices": [
                {
                    "choice": "Get"
                },
                {
                    "choice": "Post"
                },
                {
                    "choice": "Put"
                },
                {
                    "choice": "Delete"
                }
            ],
            "defaultValue": ""
        },
        "UseApi": {
            "type": "computed",
            "value": "HttpMethod != ''"
        },
        "UseValidations": {
            "type": "parameter",
            "description": "Generates a handler query implementing Immediate.Validations.",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "UseCustomizeEndpoint": {
            "type": "parameter",
            "description": "Generates a CustomizeEndpoint method in the handler. Requires a HTTP method to be specified.",
            "datatype": "bool",
            "defaultValue": "false"
        }
    }
}